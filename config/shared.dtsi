#ifndef ZMK_POINTING_DEFAULT_MOVE_VAL
#define ZMK_POINTING_DEFAULT_MOVE_VAL 7500
#endif
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20

/* LAYERS */
#define QWERTY    0
#define SYMBOL    1
#define CONTROL   2
#define MOUSE     3
#define SHORTCUTS 4
#define NUDGE     5
#define ADJUST    6

/* MACROS */
#define SWIN LG(GRAVE)
#define SCRN LG(LS(LC(N4)))
#define SCR2 LG(LS(N4))
#define ZMIN LG(EQUAL)
#define ZOUT LG(MINUS)
#define TABN LS(LG(RBKT))
#define TABP LS(LG(LBKT))
#define HBCK LG(LBKT)
#define HFWD LG(RBKT)
#define PASS LG(BSLH)
#define MUTE LG(LS(M))

&mt {
  tapping-term-ms = <150>;
};

&mmv {
  x-input-code = <INPUT_REL_X>;
  y-input-code = <INPUT_REL_Y>;
  time-to-max-speed-ms = <400>;
  acceleration-exponent = <1>;
};

/ {
  combos {
    compatible = "zmk,combos";
    combo_esc {
      timeout-ms = <50>;
      key-positions = <0 1>;
      bindings = <&kp ESC>;
      layers = <0>;
    };
    combo_quote {
      timeout-ms = <50>;
      key-positions = <18 19>;
      bindings = <&kp SQT>;
      layers = <0>;
    };
    combo_hyper {
      timeout-ms = <50>;
      key-positions = <10 19>;
      bindings = <&sk F19>;
      layers = <0>;
    };
    combo_space {
      timeout-ms = <50>;
      key-positions = <2 12>;
      bindings = <&kp SPC>; layers = <0>;
    };
    combo_return {
      timeout-ms = <50>;
      key-positions = <20 21>;
      bindings = <&kp RET>;
      layers = <0>;
    };
  };

  conditional_layers {
    compatible = "zmk,conditional-layers";

    mouse_layer {
      if-layers = <SYMBOL CONTROL>;
      then-layer = <MOUSE>;
    };

    adjust_layer {
      if-layers = <SHORTCUTS CONTROL>;
      then-layer = <ADJUST>;
    };
  };

  behaviors {
    hm: homerow_mods {
      compatible = "zmk,behavior-hold-tap";
      label = "HOMEROW_MODS";
      #binding-cells = <2>;
      tapping-term-ms = <150>;
      quick_tap_ms = <0>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
    NEXT_PREV: tap_dance_0 {
      compatible = "zmk,behavior-tap-dance";
      label = "NEXT_PREV";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&kp C_NEXT>, <&kp C_PREV>;
    };
    SCRNSHT: tap_dance_1 {
      compatible = "zmk,behavior-tap-dance";
      label = "SCRNSHT";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&kp SCRN>, <&kp SCR2>;
    };
    DWN_MUTE: tap_dance_2 {
      compatible = "zmk,behavior-tap-dance";
      label = "DWN_MUTE";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&kp C_VOL_DN>, <&kp C_MUTE>;
    };
  };
};

/* SHARED LAYER DEFINITIONS */
